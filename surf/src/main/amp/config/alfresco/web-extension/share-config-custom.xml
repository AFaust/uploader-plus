<alfresco-config>
    <config evaluator="string-compare" condition="DocumentLibrary">
        <aspects>
            <visible>
                <aspect name="up:UploadFolder"/>
            </visible>
        </aspects>
    </config>

    <config evaluator="aspect" condition="up:UploadFolder">
        <forms>
            <form>
                <field-visibility>
                    <show id="up:allowedTypes"/>
                    <show id="up:recursive"/>
                </field-visibility>
            </form>
            <form id="upload-folder">
                <field-visibility>
                    <!--
                                        <show id="cm:name" />
                                        <show id="cm:title" force="true" />
                                        <show id="cm:description" force="true" />
                                        &lt;!&ndash; tags and categories &ndash;&gt;
                                        <show id="cm:taggable" for-mode="edit" force="true" />
                    -->
                    <show id="up:allowedTypes"/>
                    <show id="up:recursive"/>
                </field-visibility>
                <edit-form template="../documentlibrary/forms/doclib-simple-metadata.ftl"/>
                <appearance>
                    <field id="up:allowedTypes">
                        <control template="/org/alfresco/components/form/controls/selectmany.ftl">
                            <control-param name="options">First,Second,Third</control-param>
                        </control>
                    </field>
                    <field id="up:recursive">
                    </field>
                </appearance>
            </form>
        </forms>
    </config>

</alfresco-config>